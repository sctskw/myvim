{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 6
  },

  "rules": {
    "strict": 0,
    "quotes": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "camelcase": 0,
    "no-underscore-dangle": 0,
    "comma-dangle": 1,
    "block-scoped-var": 2,
    "no-implicit-globals": 2,
    "no-shadow": 2,
    "no-inner-declarations": 2,
    "no-lone-blocks": 2
  }
}
